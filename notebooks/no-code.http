POST {{$dotenv GPT_OPENAI_FULL_ENDPOINT}} HTTP/1.1
api-key: {{$dotenv %GPT_OPENAI_KEY}}
Content-Type: application/json

{
    "messages": [
        {
            "role" : "system",
            "content" : "You are a general assistant."
        },
        {
            "role" : "user",
            "content" : "What is the speed of light in kilometers per hour?"
        }
    ],
    "max_tokens": 100,
    "temperature": 0.3,
    "n": 1
}

